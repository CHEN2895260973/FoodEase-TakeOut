<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:paddingRight="20dp"
    android:background="@drawable/login_bg"
    android:paddingLeft="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:textColor="@color/foodEase_color"
        android:layout_gravity="center"
        android:paddingTop="100dp"
        android:textSize="30dp"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:text="用  户  名:"/>
        <EditText android:id="@+id/username1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20sp"
            android:textColor="@color/foodEase_color"
            android:textColorHint="@color/foodEase_color"
            android:hint="请输入用户名"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:text="输入密码:"/>
        <EditText android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:layout_marginRight="20sp"
            android:singleLine="true"
            android:textColor="@color/foodEase_color"
            android:textColorHint="@color/foodEase_color"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:text="确认密码:"/>
        <EditText android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再输入密码"
            android:layout_marginRight="20sp"
            android:singleLine="true"
            android:textColor="@color/foodEase_color"
            android:textColorHint="@color/foodEase_color"
            android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:text="手机号码:"/>

        <EditText android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:layout_marginRight="20sp"
            android:singleLine="true"
            android:textColor="@color/foodEase_color"
            android:textColorHint="@color/foodEase_color"
            android:inputType="number"
            android:maxLength="12"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        <Button android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="8sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:background="@color/foodEase_color"
            android:textSize="20dp"
            android:text="确认"/>
        <Button android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="8sp"
            android:layout_weight="1"
            android:background="@color/foodEase_color"
            android:textSize="20dp"
            android:text="返回"/>


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/register_meg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35dp"
            android:layout_marginTop="30dp"
            android:textColorLink="@color/foodEase_color"
            android:gravity="center"
            android:textColor="@color/price_red" />

    </LinearLayout>

</LinearLayout>