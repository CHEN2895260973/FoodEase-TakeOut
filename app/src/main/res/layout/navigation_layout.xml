<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="5dp">
    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:textColor="@drawable/menu_item_selector"
            android:background="@drawable/menu_item_bg_selector"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="首页" />
        <RadioButton
            android:id="@+id/rb_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/ic_dashboard_black_24dp"
            android:textColor="@drawable/menu_item_selector"
            android:background="@drawable/menu_item_bg_selector"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="订单" />

        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/baseline_person_24"
            android:textColor="@drawable/menu_item_selector"
            android:background="@drawable/menu_item_bg_selector"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="我的" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>