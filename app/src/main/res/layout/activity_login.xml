<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".LoginActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:orientation="vertical" android:layout_marginTop="50dp">


        <TextView android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="FoodEase登录"
            android:textColor="@color/foodEase_color"
            android:layout_marginTop="75dp"
            android:textSize="25dp"/>
        <EditText android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:singleLine="true"
            android:hint="请输入您的用户名"
            android:textColor="@color/foodEase_color"
            android:textColorHint="@color/foodEase_color"
            android:ems="10">
            <requestFocus/>
        </EditText>
        <EditText android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="请输入您的密码"
            android:textColor="@color/foodEase_color"
            android:textColorHint="@color/foodEase_color"
            android:ems="10"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10sp">
            <Button android:id="@+id/login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@color/foodEase_color"
                android:text="登录"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="70dp"
                android:textSize="20dp"
                android:onClick="login"
                android:layout_weight="1"/>
            <Button android:id="@+id/register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@color/foodEase_color"
                android:text="注册"
                android:layout_marginRight="70sp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/td"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35dp"
            android:layout_marginTop="30dp"
            android:textColorLink="@color/foodEase_color"
            android:gravity="center"
            android:textColor="@color/price_red" />


        <!--            android:text="登录即同意用户协议"-->

